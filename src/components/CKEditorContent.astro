---
import { processHtmlContent } from "@utils/html-processor";

interface Props {
  content: string;
}

const { content } = Astro.props;
const processedHtml = await processHtmlContent(content);
---

<div class="prose prose-lg max-w-none ckeditor-content">
  <Fragment set:html={processedHtml} />
</div>

<style is:global>
  .ckeditor-content pre {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    overflow-x: auto;
    border-radius: 0.5rem;
    padding: 1rem;
  }

  .ckeditor-content pre code {
    font-size: 0.875rem;
    line-height: 1.625;
  }
</style>
