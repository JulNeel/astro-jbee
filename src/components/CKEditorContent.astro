---
import { processHtmlContent } from "@utils/html-processor";

interface Props {
  content: string;
}

const { content } = Astro.props;
const processedHtml = await processHtmlContent(content);
---

<div class="prose prose-lg ckeditor-content max-w-full">
  <Fragment set:html={processedHtml} />
</div>

<style is:global>
  /* Code block container */
  .ckeditor-content .code-block {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    border-radius: 0.5rem;
    overflow: hidden;
    background-color: #24292e;
  }

  /* Code block header */
  .ckeditor-content .code-block-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: #1f2428;
    border-bottom: 1px solid #444d56;
    font-size: 0.75rem;
    color: #959da5;
  }

  .ckeditor-content .code-block-filename {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    color: #e1e4e8;
  }

  .ckeditor-content .code-block-lang {
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Code block content wrapper */
  .ckeditor-content .code-block-content {
    position: relative;
  }

  /* Copy button */
  .ckeditor-content .code-block-copy {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    padding: 0;
    background-color: #2d333b;
    border: 1px solid #444d56;
    border-radius: 0.375rem;
    color: #8b949e;
    cursor: pointer;
    transition: all 0.15s ease;
    z-index: 10;
  }

  .ckeditor-content .code-block-copy:hover {
    background-color: #373e47;
    color: #e1e4e8;
  }

  .ckeditor-content .code-block-copy:active {
    transform: scale(0.95);
  }

  .ckeditor-content .code-block-copy .icon-check {
    color: #3fb950;
  }

  .ckeditor-content .code-block-copy .hidden {
    display: none;
  }

  /* Shiki pre element */
  .ckeditor-content .code-block pre {
    margin: 0;
    padding: 1rem;
    overflow-x: auto;
    border-radius: 0;
  }

  .ckeditor-content .code-block pre code {
    font-size: 0.875rem;
    line-height: 1.625;
  }

  /* Fallback for non-wrapped pre elements */
  .ckeditor-content pre:not(.code-block pre) {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    overflow-x: auto;
    border-radius: 0.5rem;
    padding: 1rem;
  }

  .ckeditor-content pre:not(.code-block pre) code {
    font-size: 0.875rem;
    line-height: 1.625;
  }

  /* Callouts */
  .ckeditor-content [class^="callout-"] {
    padding: 1rem 1.25rem;
    margin: 1.5rem 0;
    border-radius: 0 0.5rem 0.5rem 0;
    border-left: 4px solid;
  }

  .ckeditor-content .callout-info {
    background-color: var(--color-info-light);
    border-color: var(--color-info);
    color: var(--color-info-contrast);
  }

  .ckeditor-content .callout-warning {
    background-color: var(--color-warning-light);
    border-color: var(--color-warning);
    color: var(--color-warning-contrast);
  }

  .ckeditor-content .callout-danger {
    background-color: var(--color-danger-light);
    border-color: var(--color-danger);
    color: var(--color-danger-contrast);
  }

  .ckeditor-content .callout-success {
    background-color: var(--color-success-light);
    border-color: var(--color-success);
    color: var(--color-success-contrast);
  }

  .ckeditor-content .callout-primary {
    background-color: var(--color-primary-light);
    border-color: var(--color-primary);
    color: var(--color-primary-dark);
  }

  .ckeditor-content .callout-secondary {
    background-color: var(--color-secondary-light);
    border-color: var(--color-secondary);
    color: var(--color-secondary-dark);
  }

  /* Figure images - centered by default */
  .ckeditor-content figure.image {
    margin: 1.5rem auto;
    text-align: center;
    display: table;
  }

  .ckeditor-content figure.image img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }

  /* Figure aligned right */
  .ckeditor-content figure.image-style-block-align-right {
    float: right;
    margin: 0.5rem 0 1rem 1.5rem;
  }

  /* Figure aligned left */
  .ckeditor-content figure.image-style-block-align-left {
    float: left;
    margin: 0.5rem 1.5rem 1rem 0;
  }

  /* Standalone images */
  .ckeditor-content img {
    max-width: 100%;
    height: auto;
  }
</style>

<script>
  function initCodeBlockCopy() {
    const copyButtons = document.querySelectorAll(".code-block-copy");

    copyButtons.forEach((button) => {
      button.addEventListener("click", async () => {
        const code = button.getAttribute("data-code");
        if (!code) return;

        try {
          await navigator.clipboard.writeText(code);

          // Toggle icons
          const copyIcon = button.querySelector(".icon-copy");
          const checkIcon = button.querySelector(".icon-check");

          if (copyIcon && checkIcon) {
            copyIcon.classList.add("hidden");
            checkIcon.classList.remove("hidden");

            // Reset after 2 seconds
            setTimeout(() => {
              copyIcon.classList.remove("hidden");
              checkIcon.classList.add("hidden");
            }, 2000);
          }
        } catch (err) {
          console.error("Failed to copy code:", err);
        }
      });
    });
  }

  // Initialize on page load
  initCodeBlockCopy();

  // Re-initialize on Astro page transitions
  document.addEventListener("astro:page-load", initCodeBlockCopy);
</script>
