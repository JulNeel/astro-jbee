---
import DesktopMenu from "@components/DesktopMenu";
import MobileMenu from "@components/MobileMenu";
import logo from "@images/jbee_logo_dev.png";

interface Props {
  isHomePage?: boolean;
}
const { isHomePage = false } = Astro.props;

// Menu statique
const menuItems = [
  { label: "Accueil", path: "/" },
  { label: "Blog", path: "/blog" },
  { label: "Ressources", path: "/ressources" },
  { label: "Linkedin", path: "https://www.linkedin.com/in/julienbruneel/", target: "_blank" as const },
];
---

<div class="font-heading hidden items-end justify-end md:flex">
  <DesktopMenu
    menuItems={menuItems}
    isHomePage={isHomePage}
    logoUrl={logo.src}
    logoAlt="JBee Logo"
    client:media="(min-width: 768px)"
  />
</div>
<div class="font-heading md:hidden">
  <MobileMenu menuItems={menuItems} client:media="(max-width: 768px)" />
</div>
