---
import type { BlogPost } from "@content/api/wordpress/types";
import { Image } from "astro:assets";

interface Props {
  post: BlogPost;
}
const { post } = Astro.props;
---

<article>
  {
    post.featuredImage && (
      <Image src={post.featuredImage.url} alt={post.featuredImage.altText} width={800} height={600} />
    )
  }
  <h2 class="h4">
    <a href={`/${post.slug}`}>{post.title}</a>
  </h2>
  <div set:html={post.excerpt} />
</article>

<p>{post.excerpt}</p>
