---
import { twMerge } from "tailwind-merge";

type Variant = "padded" | "full" | "constrained" | "narrow";

interface Props {
  variant?: Variant;
  as?: keyof HTMLElementTagNameMap;
  class?: string;
  id?: string;
}

const {
  variant = "padded",
  as = "div",
  class: className,
  id
} = Astro.props as Props;

const Tag = as;

const variants: Record<Variant, string> = {
  full: "w-full",
  padded: "w-full px-4 sm:px-6 lg:px-8",
  constrained: "max-w-7xl px-4 sm:px-6 lg:px-8",
  narrow: "max-w-4xl px-4 sm:px-6 lg:px-8",
};

const classes = twMerge("mx-auto", variants[variant], className);
---

<Tag id={id} class={classes}>
  <slot />
</Tag>
